{
  "name": "veggiekarte",
  "version": "1.1.0",
  "description": "A OpenStreetMap based map to easily find places, like restaurants and cafes, with vegetarian and vegan options.",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/piratenpanda/veggiekarte"
  },
  "keywords": [
    "vegan",
    "map"
  ],
  "author": {
    "name": "piratenpanda",
    "url": "https://codeberg.org/piratenpanda"
  },
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://codeberg.org/piratenpanda/veggiekarte/issues"
  },
  "homepage": "https://veggiekarte.de/",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@stylistic/eslint-plugin": "^2.12.1",
    "eslint": "^9.17.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-jsonc": "^2.18.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "rollup": "^4.29.1",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.2"
  },
  "scripts": {
    "build": "rollup -c",
    "bump": "npx bumpp package.json package-lock.json js/bundle.js service-worker.js --no-push",
    "lint": "eslint && stylelint **/*.css && prettier --check .",
    "lint:fix": "eslint --fix && stylelint --fix **/*.css && prettier --write .",
    "prepare": "husky",
    "release": "npm run lint:fix && npm run build && npm run bump",
    "test": "npm run lint"
  },
  "type": "module",
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix"
  }
}
