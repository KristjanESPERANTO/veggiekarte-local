{
  "name": "veggiekarte",
  "version": "2.3.0",
  "description": "A OpenStreetMap based map to easily find places, like restaurants and cafes, with vegetarian and vegan options.",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/piratenpanda/veggiekarte"
  },
  "keywords": [
    "vegan",
    "map"
  ],
  "author": {
    "name": "piratenpanda",
    "url": "https://codeberg.org/piratenpanda"
  },
  "contributors": [
    "https://codeberg.org/piratenpanda/veggiekarte/activity/contributors"
  ],
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://codeberg.org/piratenpanda/veggiekarte/issues"
  },
  "homepage": "https://veggiekarte.de/",
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/markdown": "^7.5.1",
    "@mapbox/maki": "^8.2.0",
    "@rapideditor/temaki": "^5.11.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@stylistic/eslint-plugin": "^5.6.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import-x": "^4.16.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lightningcss-cli": "^1.30.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rollup": "^4.54.0"
  },
  "dependencies": {
    "@kristjan.esperanto/leaflet-language-selector": "^3.4.0",
    "@kristjan.esperanto/leaflet.markercluster": "^3.0.0",
    "chart.js": "^4.5.1",
    "email-validator": "^2.0.4",
    "leaflet": "^2.0.0-alpha.1",
    "leaflet-control-geocoder": "^3.3.1",
    "leaflet.fullscreen": "^5.1.1",
    "libphonenumber-js": "^1.12.33",
    "opening_hours": "^3.9.0"
  },
  "overrides": {
    "leaflet-control-geocoder": {
      "leaflet": "$leaflet"
    }
  },
  "scripts": {
    "build": "node scripts/generate_icons.js && rollup -c && lightningcss --minify --bundle css/main.css -o css/bundle.css",
    "bump": "npx bumpp package.json package-lock.json js/bundle.js datacheck/datacheck-bundle.js js/veggiemap_chart-bundle.js service-worker.js --no-push",
    "datacheck": "node ./datacheck/datacheck.js",
    "lint": "eslint && prettier . --check",
    "lint:fix": "eslint --fix && prettier . --write",
    "prepare": "husky",
    "refresh": "python3 refresh.py",
    "release": "node --run lint:fix && node --run build && node --run bump",
    "test": "node --run lint"
  },
  "type": "module",
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  }
}
