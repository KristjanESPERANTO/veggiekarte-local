{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["airbnb-base", "plugin:json/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "root": true,
  "ignorePatterns": ["third-party/"],
  "rules": {
    "no-console": "off",
    "prefer-destructuring": "off",
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "new-cap": "off",
    "no-underscore-dangle": "off",
    "no-use-before-define": ["error", { "functions": false }]
  }
}
